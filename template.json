{
"variables": {
    "aws_access_key": "youraccesskey",
    "aws_secret_key": "yoursecretkey",
    "aws_region": "ap-southeast-2"
    },
"provisioners": [
    {
    "type": "shell",
    "script": "provision.sh"
    }
    ],

    "builders": [{
    "type": "amazon-ebs",
